{
    "name": "linkSHARK",
    "author": "Steffen Herbold",
    "version": "2.0.1",
    "plugin_type": "other",
    "linux_libraries": [],
    "description": "Plugin to add links between commits and issues.",
    "requires": [{
            "name": "vcsSHARK",
            "operator": ">=",
            "version": "2.0.0"
        },
        {
            "name": "issueSHARK",
            "operator": ">=",
            "version": "2.0.0"
        }],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to root folder of plugin"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "path to root folder of plugin"
        },
        {
            "name": "db_user",
            "required": false,
            "position": 2,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": false,
            "position": 3,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 4,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 5,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 6,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_authentication",
            "required": false,
            "position": 7,
            "type": "execute",
            "description": "databse against which users are authenticated"
        },
        {
            "name": "ssl_enabled",
            "required": false,
            "position": 8,
            "type": "execute",
            "description": "needs to be set if database uses ssl connection"
        },
        {
            "name": "log_level",
            "required": false,
            "position": 9,
            "type": "execute",
            "description": "debug level (DEBUG, INFO, ERROR, WARNING)"
        },
        {
            "name": "project_name",
            "required": true,
            "position": 10,
            "type": "execute",
            "description": "number of cores to use"
        },
        {
            "name": "broken_keys",
            "required": false,
            "position": 11,
            "type": "execute",
            "description": "start index"
        },
        {
            "name": "correct_key",
            "required": false,
            "position": 12,
            "type": "execute",
            "description": "end index"
        }
    ]
}